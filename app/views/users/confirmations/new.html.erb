<div class="container subpage_dark">
  <h2>Resend confirmation instructions</h2>
</div>

<div class="dark_form">
  <div class="container">
    <div class="row-fluid">
    	<h2></h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email, :input_html => { :class => "input-xlarge" } %>
  <div class="form-actions"><%= f.submit "Resend Confirmation", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
  </div>
</div>
