<div class="container subpage_dark">
	<h2>Register Your TapeGlue Account</h2>
</div>

<div class="dark_form">
	<div class="container">
		<div class="row-fluid">


			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
			  <%= devise_error_messages! %>
			  <%= f.input :first_name, :input_html => { :class => "input-xlarge" } %>
			  <%= f.input :last_name, :input_html => { :class => "input-xlarge" } %>
			  <%= f.input :email, :input_html => { :class => "input-xlarge" } %>
			  <%= f.input :password, :input_html => { :class => "input-xlarge" } %>
			  <%= f.input :password_confirmation, :input_html => { :class => "input-xlarge" } %>

			  <div class="form-actions"><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
			<% end %>

		</div>
	</div>
</div>