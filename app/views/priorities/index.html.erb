<h1>Listing priorities</h1>

<table class="table table-striped">
 <thead>
 <tr>
    <th>Title</th>
    <th></th>
  </tr>
 </thead>

<tbody>
<% @priorities.each do |priority| %>
  <tr>
     <td><%= priority.title %></td>
    <td><%= link_to 'Show', priority %>
      <%= link_to 'Edit', edit_priority_path(priority) %>
      <%= link_to 'Destroy', priority, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Priority', new_priority_path %>
